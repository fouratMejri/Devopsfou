pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                echo 'checking the app'
            }
        }
        stage('Build') {
            steps {
                echo 'building the app'
            }
        }
        stage('Test') {
            steps {
                echo 'testing the app'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the app'
            }
        }
    }
}
